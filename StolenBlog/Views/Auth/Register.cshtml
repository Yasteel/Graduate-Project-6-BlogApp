
@model Register
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form id="registerForm"  method="post" asp-controller="Auth" asp-action="Register">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="@Model.User.Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.User.Email"></label>
                <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.Password"></label>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.RepeatPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="@Model.RepeatPassword"></label>
                <span asp-validation-for="@Model.RepeatPassword" class="text-danger"></span>
            </div>
            <hr />
            <div class="form-floating">
                <input asp-for="@Model.User.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.User.FirstName"></label>
                <span asp-validation-for="@Model.User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.User.Surname" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.User.Surname"></label>
                <span asp-validation-for="@Model.User.Surname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.User.DisplayName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.User.DisplayName"></label>
                <span asp-validation-for="@Model.User.DisplayName" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="@Model.User.DateOfBirth" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="@Model.User.DateOfBirth"></label>
                <span asp-validation-for="@Model.User.DateOfBirth" class="text-danger"></span>
            </div>
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            <div>
                <p>
                    Already Have an Account? <a asp-controller="Auth" asp-action="Login">Login Here</a>
                </p>
            </div>
        </form>
    </div>
    
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
